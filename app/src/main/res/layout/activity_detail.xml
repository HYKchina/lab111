<?xml version="1.0" encoding="utf-8"?>
<!-- Part F: Detail screen placeholder UI (header image + icon/title + scrollable body). -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Use a guideline to keep the header height responsive -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/detailGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.32" />

    <!-- ===== Header area (background image + overlay content) ===== -->
    <FrameLayout
        android:id="@+id/detailHeader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detailGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/detailHeaderBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/banner_cd"
            android:scaleType="centerCrop"
            android:src="@drawable/img_main_banner" />

        <!-- Overlay: icon + big title -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/headerIcon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/facilities"
                android:src="@drawable/img_btn_facilities"
                app:layout_constraintWidth_percent="0.16"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/facilities"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="28sp"
                app:layout_constraintStart_toEndOf="@id/headerIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/headerIcon"
                app:layout_constraintBottom_toBottomOf="@id/headerIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <!-- ===== Body area ===== -->
    <ScrollView
        android:id="@+id/detailScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/detailGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/facilities"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/detailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Placeholder content"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
